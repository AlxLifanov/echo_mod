entities:

# Процесс `client` должен вызывать процесс `server`.

# task name path
- task: echo.Client1                  # имя процесса/экземпляра, но для клиента оно никого не волнует
  name: echo.Client                   # имя класса процесса, используется в xDL и security.psl
  path: ClientExec                    # имя исполнимого файла, видно при загрузке ОС
  connections:
  - target: echo.Server1              # соединение должно указывать на конкретный экземпляр сервера
    id: server_connection
@INIT_Client1_ENTITY_CONNECTIONS@     # директива препроцессора для генерации служебных соединений, в дополнение
                                      # к явно описанным пользовательским соединениям. Например, к ядру.

# Процесс `server` только отвечает на запросы.
- task: echo.Server1                  # имя процесса/экземпляра, на него указывает соединение клиента
  name: echo.Server                   # имя класса процесса, используется в xDL и security.psl
  path: ServerExec                    # имя исполнимого файла, видно при загрузке ОС
@INIT_Server1_ENTITY_CONNECTIONS@     # директива препроцессора для генерации служебных соединений
